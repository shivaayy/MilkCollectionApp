<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="150sp"
                android:background="@drawable/front_image"
                android:paddingBottom="100sp"
                android:text="Mohan Doodh Dairy"
                android:textColor="#FF5722"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                tools:text="Mohan Doodh Dairy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/includefat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:paddingRight="20sp"
                    android:text="Include Fat"
                    android:textColor="#000000" />

                <Switch
                    android:id="@+id/includeSNF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:paddingRight="20sp"
                    android:text="Include SNF"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Avg Fat"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/avgfat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Evter avg fat"
                    android:inputType="textPersonName"
                    android:text="6.5"
                    android:textColor="#4CAF50" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Avg SNF"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/avgSNF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter avg SNF"
                    android:inputType="textPersonName"
                    android:text="9.0"
                    android:textColor="#4CAF50" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Milk Price"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/milkprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter milk price"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Milk Fat"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/milkfat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter fat"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Milk SNF"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/milkSNF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter SNF"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Milk Quantity"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/milkquantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter milk quantity"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <Switch
                android:id="@+id/includetear"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:checked="false"
                android:text="Include Tare" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tare Weight"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/tearWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter tare weight"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <TextView
                android:id="@+id/bill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="#FAFBFA"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textColor="#F8F0F0" />

            <Button
                android:id="@+id/makebill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="#03A9F4"
                android:text="Generate Bill"
                android:textColor="#F8F0F0"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/savebill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:background="#03A9F4"
                    android:text="Save Bill"
                    android:textColor="#F8F0F0"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/billhistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#03A9F4"
                    android:text="Bill History"
                    android:textColor="#F8F0F0"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/farmername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter name"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phnoview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phone no"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/phno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter Phone no"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <Button
                android:id="@+id/sendSMS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:background="#03A9F4"
                android:text="Send SMS"
                android:textColor="#F8F0F0"
                android:textSize="18sp" />

            <Button
                android:id="@+id/searchno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="#03A9F4"
                android:text="Search Phone No"
                android:textColor="#F8F0F0"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>